<div class="container">
  <div class="pure-g">
    <div class="pure-u-md-1-3">&nbsp;</div>
      <div class="pure-u-1 pure-u-md-1-3 account-info">
        {{#if notAdmin }}
          {{#if user.activated}}
            <p>You can order your dots for {{price}} kr </p>
          {{else}}
            <p>You need to wait for your account to be activated before you can order dots</p>
          {{/if}}

        {{else}}
          {{#if user.activated}}
            <p>Deactivate this account?</p>
            <form action="/users/{{user._id}}/deactivate" method="post">
              <input type="hidden" name="_csrf" value="{{csrfToken}}">
              <input type="submit" value="Deactivate" />
            </form>

          {{else}}
            <p>Acticate this account?</p>
            <form action="/users/{{user._id}}/activate" method="post">
              <input type="hidden" name="_csrf" value="{{csrfToken}}" />
              <input type="submit" value="Activate">
            </form>
          {{/if}}
        {{/if}}
      </div>
    <div class="pure-u-md-1-3">&nbsp;</div>
  </div>
  <div id="designs">
    <div class="pure-g">
      <div class="pure-u-md-1-3">&nbsp;</div>
      <div class="pure-u-1 pure-u-md-1-3">
        <h2>Profile</h2>
      </div>
      <div class="pure-u-md-1-3">&nbsp;</div>
    </div>


    {{#each designs}}
    <div class="pure-g">
      <div class="pure-u-md-1-3">&nbsp;</div>
      <div class="pure-u-1 pure-u-md-1-3 design">
        <div class="image-container">
          <img src="" height="100px" width="100px" class="hidden" data-image-url="{{imageUrl}}" />
          <p class="dot-design-name">{{name}}</p>
          <form name="{{name}}"  method="POST" class="add-button-form form">
            <input type="hidden" name="buttonID" value="{{id}}" />
            <input type="hidden" name="_csrf" value="{{../csrfToken}}" />
            {{#if ../user.activated}}
              {{#if ordered}}
                <input type="submit" name="order" value="Remove from cart" class="pure-button remove"></input>
              {{else}}
                <input type="submit" name="order" value="Add to cart" class="pure-button add"></input>
              {{/if}}
            {{/if}}
          </form>


        </div>
        <div>
        </div>
      </div>
      <div class="pure-u-md-1-3">&nbsp;</div>
    </div>
    {{/each}}


</div>
</div>
