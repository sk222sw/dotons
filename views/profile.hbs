<div class="container">
  <div id="profile-description main" class="pure-g">

    <div class="pure-u-1 pure-u-md-1-3 profile-info">
      
      
      {{#if user.companyInfo}}
        <h2>Welcome {{user.companyInfo.companyName}} </h2>
      {{else if user.userInfo}}
        <h2>Welcome {{user.userInfo.firstName}} {{user.userInfo.lastName}}</h2>
      {{else}}
        <h2>Welcome {{email}} </h2>
      {{/if}}
    </div>
    <div class="pure-u-1 pure-u-md-1-3">
          <!--<a class="pure-button pure-button-primary button-xlarge" href="/designer">New Design!</a>
          -->
          
            
            <div class="new-design">
              
              <a href="/designer"><img src="/images/dot.png"><h3><span>New Design!</span></h3></a>
              
            </div>
            
          
        </div>
  </div>
  <div id="designs">
      <div class="pure-g">
        <div class="pure-u-md-1-3">&nbsp;</div>
        
      </div>
      <div class="pure-g">
        <div class="pure-u-md-1-3">&nbsp;</div>
        <div class="pure-u-1 pure-u-md-1-3">
          <h2>My Designs</h2>
        </div>
      </div>
      {{#each designs}}
      <div class="pure-g">
        <div class="pure-u-md-1-3">&nbsp;</div>
        <div class="pure-u-1 pure-u-md-1-3 design">
          <h3>{{name}}</h2>
          <img src="" class="hidden" data-image-url="{{imageUrl}}" />
        </div>
      </div>
      {{/each}}
    
  </div>
</div>


