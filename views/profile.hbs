<div class="container">
  <div class="pure-g">
    <div class="pure-u-md-1-3">&nbsp;</div>
    <div id="profile-description" class="pure-u-1 pure-u-md-1-3">
      {{#if user.companyInfo}}
        <h1>Welcome {{user.companyInfo.companyName}} </h1>
      {{else if user.userInfo}}
        <h1>Welcome {{user.userInfo.firstName}} {{user.userInfo.lastName}}</h1>
      {{else}}
        <h1>Welcome {{email}} </h1>
      {{/if}}
    </div>
  </div>
  <div class="pure-g">
    <div class="pure-u-md-1-3">&nbsp;</div>
    <div class="pure-u-1 pure-u-md-1-3">
          <!--<a class="pure-button pure-button-primary button-xlarge" href="/designer">New Design!</a>
          -->
      <div class="new-design">
        <a href="/designer"><img src="/images/dot.png"><h3><span>New Design!</span></h3></a>
      </div> 
    </div>
  </div>
  
  <div id="designs">
      <div class="pure-g">
        <div class="pure-u-md-1-3">&nbsp;</div>
        
      </div>
      <div class="pure-g">
        <div class="pure-u-md-1-3">&nbsp;</div>
        <div class="pure-u-1 pure-u-md-1-3">
          <h2>My Designs</h2>
        </div>
      </div>
      {{#each designs}}
      <div class="pure-g">
        <div class="pure-u-md-1-3">&nbsp;</div>
        <div class="pure-u-1 pure-u-md-1-3 design">
          <h3>{{name}}</h2>
          <img src="" class="hidden" data-image-url="{{imageUrl}}" />
        </div>
      </div>
      {{/each}}
    
  </div>
</div>


