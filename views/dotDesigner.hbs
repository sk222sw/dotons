<div class="">
  <div id="designer-container">
    <div id="designer-area">

            <div class="upload-area">
        <form class="pure-form" id="upload-form"
                enctype="multipart/form-data"
                action="/designer/upload"
                method="post" name="designer">
              <input type="hidden" name="_csrf" value="{{csrfToken}}">
              <label class="upload-label">
                <input type="file" name="upload" id="dot-design"/>
                <span class="pure-button new-image-span">New image</span>
              </label>
              <div id="submit-buttons">
                <input type="submit" class="pure-button" value="Save" name="save" id="save-submit" disabled />
              </div>
              <span id = "status"></span>
        </form>
      </div>
      <div id="canvas-area">
        <canvas id="canvas"></canvas>
      </div>
      <div class="pure-g" id="controls-area">
        <input type="submit" class="pure-button pure-u-1-3 designer-button" value="Undo" name="undo" id="undo" />
        <input type="submit" class="pure-button pure-u-1-3 designer-button" value="Center" name="center" id="center-image" />
        <input type="submit" class="pure-button pure-u-1-3 designer-button" value="Redo" name="redo" id="redo" />
      </div>
    </div>
    <div id="designer-flash" class="hidden">
      <p id="designer-flash-message"></p>
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/1.6.0/fabric.min.js"></script>
  <script src="javascripts/designer.js"></script>
</div>