<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-3"></div>
  <div class="pure-u-1 pure-u-md-1-3">
    <div id="designer-area">
      <div class="pure-g" id="controls-area">
        <div class="pure-u-1-3 designer-button" id="undo"></div>
        <div class="pure-u-1-3 designer-button" id="center-image"></div>
        <div class="pure-u-1-3 designer-button" id="redo"></div>
      </div>
      <div id="canvas-area">
        <canvas id="canvas"></canvas>
      </div>
      <div class="upload-area">
        <form class="pure-form" id="upload-form"
                enctype="multipart/form-data"
                action="/designer/upload"
                method="post" name="designer">
              <input type="hidden" name="_csrf" value="{{csrfToken}}">
              <label class="upload-label">
                <input type="file" name="upload" id="dot-design"/>
                <span class="pure-button"></span>
              </label>
              <div id="submit-buttons">
                <input type="submit" class="pure-button" value="" name="upload" id="upload-submit" />
                <input type="submit" class="pure-button hidden" value="" name="save" id="save-submit" />
              </div>
              <span id = "status"></span>
        </form>
      </div>
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/1.6.0/fabric.min.js"></script>
  <script src="javascripts/designer.js"></script>
</div>
