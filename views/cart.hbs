
<div class="container">
  <div class="pure-g">
    <div class="pure-u-md-1-4">
      &nbsp;
    </div>
    <div class="pure-u-1 pure-u-md-1-2 cart-info">
      {{#if cart}}
      <h2>Your cart</h2>
      <form name="order" action="/orders/create" method="POST" class="pure-form">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        {{#each cart}}
          <div class="order-line">
          <span class="order-line-image">
             <img src="" height="100px" width="100px" class="hidden" data-image-url="{{imageUrl}}" />
   
          </span> 
          </div>  
        {{/each}}
        <button type="submit">Place order</button>
      <form>
      {{else}}
        <p>There are no dots in your cart..</p>
      {{/if}}
      
      
    </div>
  </div>
</div>