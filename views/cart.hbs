
<div class="container">
  <div class="pure-g">
    <div class="pure-u-md-1-4">
      &nbsp;
    </div>
    <div class="pure-u-1 pure-u-md-1-2 cart-info">
      {{#if cart}}
      <h2>Your cart</h2>
      <form name="order" action="/orders/create" method="POST" class="pure-form">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <table class="pure-table">
          <thead>
            <tr>
              <th></th>
              <th>Size</th>
              <th>Quantity</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            {{#each cart}}
            <tr>
              <td>
                <img src="" height="50px" width="50px" class="hidden" data-image-url="{{design.imageUrl}}" />
              </td>
              <td>
                <div><label for="10mm">10mm</label><input type="checkbox" {{#if selected10mm}}checked{{/if}} name="10mm" class="checkbox-10mm"></div>
                <div><label for="11mm">11mm</label><input type="checkbox" {{#if selected11mm}}checked{{/if}} name="11mm" class="checkbox-11mm"></div>

              </td>
            
              <td>
                <div><input type="number" name="10mm-quantity" value="{{quantity10mm}}" min="1000" class="quantity-10mm"></div>
                <div><input type="number" name="11mm-quantity" value="{{quantity11mm}}" min="1000" class="quantity-11mm"></div>

              </td>
              <td>
                <p class="totalPrice"></p>
              </td>
            </tr>
            
            {{/each}}
            
          </tbody>

        </table>
        
        <button type="submit">Place order</button>
      <form>
      {{else}}
        <p>There are no dots in your cart..</p>
      {{/if}}
      
      
    </div>
  </div>
</div>