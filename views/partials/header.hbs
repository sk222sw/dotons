<header class="custom-wrapper pure-g" id="menu">
  <div class="pure-u-md-1-6">&nbsp;</div>
  <div class="pure-u-1 pure-u-md-1-6">
    <div class="pure-menu">
        <a class="pure-menu-heading custom-brand" href="/">
          <div class="brand-logo">
            <!--<img srcs"/images/logo.png"/ class="logo">-->
          </div>
        </a>
        <a href="#" class="custom-toggle" id="toggle"><s class="bar"></s><s class="bar"></s></a>
    </div>
  </div>
  <div class="pure-u-1 pure-u-md-1-3">
    <div class="pure-menu-horizontal">
      <div class="pure-menu-list">
        <div class="pure-menu-item {{#if active.designer}}active{{/if}}"><a href="/designer" class="pure-menu-link">Designer</a></div>
        <div class="pure-menu-item {{#if active.about}}active{{/if}}"><a href="#" class="pure-menu-link">About</a></div>
        <div class="pure-menu-item {{#if active.contact}}active{{/if}}"><a href="#" class="pure-menu-link">Contact</a></div>
        {{#if user}}

          <div class="pure-menu-item {{#if active.cart}}active{{/if}}">
            <a href="/cart" class="pure-menu-link">
              Items in cart: <span class="cart-count">{{cartCount}}</span>
            </a>
          </div>


          <div class="pure-menu-item {{#if active.profile}}active{{/if}}"><a href="/profile" class="pure-menu-link">Profile</a></div>  
        {{/if}}
      </div>
    </div>
  </div>
  <div class="pure-u-1 pure-u-md-1-3">
    <div class="pure-menu-horizontal">
          <ul class="pure-menu-list">
              {{#if user}}
                <div class="pure-menu-item"><a href="/logout" class="pure-menu-link">Logout</a></div>
              {{else}}

              <div class="pure-menu-item" id="login-button"><a href="#" class="pure-menu-link">Login</a></div>
              <div class="pure-menu-item {{#if active.signup}}active{{/if}}"><a href="/signup" class="pure-menu-link">Register</a></div>
              {{/if}}
          </ul>
            </div>
  <div class="pure-u-md-1-6">&nbsp;</div>
</header>

