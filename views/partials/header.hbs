<header class="custom-wrapper pure-g" id="menu">
  <div class="pure-u-md-1-6">&nbsp;</div>
  <div class="pure-u-1 pure-u-md-1-6">
    <div class="pure-menu">
         <a class="pure-menu-heading custom-brand" href="/">
          <img src="/images/logo.png"/ class="logo">
        </a>
        <a href="#" class="custom-toggle" id="toggle"><s class="bar"></s><s class="bar"></s></a>
    </div>
  </div>
  <div class="pure-u-1 pure-u-md-1-3">
    <div class="pure-menu-horizontal">
      <div class="pure-menu-list">
        <li class="pure-menu-item {{#if active.designer}}active{{/if}}"><a href="/designer" class="pure-menu-link">Designer</a></li>
        <li class="pure-menu-item {{#if active.about}}active{{/if}}"><a href="#" class="pure-menu-link">About</a></li>
        <li class="pure-menu-item {{#if active.contact}}active{{/if}}"><a href="#" class="pure-menu-link">Contact</a></li>
        {{#if user}}

          <li class="pure-menu-item {{#if active.cart}}active{{/if}}">
            <a href="/cart" class="pure-menu-link">
              Items in cart: <span class="cart-count">{{cartCount}}</span>
            </a>
          </li>


          <li class="pure-menu-item {{#if active.profile}}active{{/if}}"><a href="/profile" class="pure-menu-link">Profile</a></li>  
        {{/if}}
      </div>
    </div>
  </div>
  <div class="pure-u-1 pure-u-md-1-6">
      <div class="pure-menu pure-menu-horizontal custom-menu-3 custom-can-transform">
          <ul class="pure-menu-list">
              {{#if user}}
                <li class="pure-menu-item"><a href="/logout" class="pure-menu-link">Logout</a></li>
              {{else}}

              <li class="pure-menu-item" id="login-button"><a href="#" class="pure-menu-link">Login</a></li>
              <li class="pure-menu-item {{#if active.signup}}active{{/if}}"><a href="/signup" class="pure-menu-link">Register</a></li>
              {{/if}}
          </ul>
      </div>
  </div>
  <div class="pure-u-md-1-6">&nbsp;</div>
</header>