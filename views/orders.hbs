<div class="pure-g orders">
<div class="pure-u-md-1-3">&nbsp;</div>
<div class="pure-u-md-1-3">
    {{#if notAdmin}}
      <h1>My orders</h1>
      <div class="pure-g order-info">
        <div class="pure-u-1 pure-u-md-1-4">ID</div>
        <div class="pure-u-1 pure-u-md-1-4">Order date</div>
        <div class="pure-u-1 pure-u-md-1-4">Shipped status</div>
        <div class="pure-u-1 pure-u-md-1-4">Price</div>
      </div>
      <hr />
      {{#each orders}}
      {{orders}}
      <div class="pure-g order-item">
        <div class="pure-u-1 pure-u-md-1-4"><a href="/orders/{{id}}">View order</a></div>
        <div class="pure-u-1 pure-u-md-1-4">{{displayDate}}</div>
        <div class="pure-u-1 pure-u-md-1-4">{{#if shipped}}Shipped!{{else}}Not shipped.{{/if}}</div>
        <div class="pure-u-1 pure-u-md-1-4">{{totalPrice}}</div>
      </div>
      {{/each}}
      
      
    {{else}}
      <h1>All orders</h1>
      <table class="pure-table">
        <thead>
          <th>Order date</th>
          <th>Shipped</th>
          <th>Customer</th>
          <th></th>
          <th> </th>
        </thead>
        <tbody>
          {{#each orders}} 
          <tr>
          <td>{{orderDate}}</td>
          <td>{{#if shipped}}Yes{{else}}No{{/if}}</td>
          <td>{{user}}</td>
          <td><a href="/orders/{{id}}/">View order</a></td> 
          <td>
            <form action="/orders/{{id}}/ship" method="POST">
              <input type="hidden" class="csrf" value="{{../csrfToken}}" name="_csrf" />
              <button type="submit" {{#if shipped}}disabled {{/if}} class="pure-button">{{#if shipped}}Already shipped{{else}}Mark as shipped{{/if}}</button>
            </form>
          </td>
          {{/each}}
          </tr>
        </tbody>
      </table>
    {{/if}}

      
     
      
    
  </div>
</div>